@using System.Web.Optimization;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title -  SimpeBlog</title>

    @Styles.Render("~/styles")

</head>
<body>
    <header>
        <h1> 
            <a href="@Url.RouteUrl("home")">Simple Blog</a>
            <i class="glyphicon glyphicon-bell"></i>
        </h1>

        @if (User.Identity.IsAuthenticated)
        {
            <p> Welcome back, @User.Identity.Name</p>
            <a href="@Url.RouteUrl("logout")">Logout</a>

            if (User.IsInRole("admin"))
            {
                <!-- Generate -->
                @*<a href="@Url.Action("index", "Posts", new { area = "admin"})"></a>*@
                <a href="@Url.Action("index", "Users")">Click here to access content only for admin</a>
            }
        }
        else
        {
            <a href="@Url.RouteUrl("login")">Login</a>
        }

    </header>

    <!-- Insert view here-->
    @RenderBody()

    <footer>
        &copy; @DateTime.UtcNow.Year - Me 
    </footer>

    @Scripts.Render("~/scripts");
    @RenderSection("Scripts", false)
</body>
</html>
